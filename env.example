# ── API ───────────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ── Database ──────────────────────────────────────────────────────────────
# SQLite file path (created automatically on first run)
DB_PATH=data/tennis_court_finder.db

# ── SMTP (optional — leave blank for console-only mode) ──────────────────
# When these are empty, notification emails are printed to the console.
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@tenniscourtfinder.local
SMTP_USE_TLS=true

# ── Notifier ─────────────────────────────────────────────────────────────
# How often to check for slot status transitions (seconds)
NOTIFIER_INTERVAL=60
# Min seconds between two emails for the same subscription
NOTIFIER_COOLDOWN=300

# ── Logging ──────────────────────────────────────────────────────────────
LOG_LEVEL=INFO

# ── Development ──────────────────────────────────────────────────────────
DEBUG=true
ENVIRONMENT=development
